from IPython.display import display, clear_output
import ipywidgets as widgets

# --- Funções e Variáveis do Quiz ---

# Mensagem inicial
welcome_message_ui = widgets.HTML(
    value="<h1 style='color: #4CAF50; text-align: center;'>Bem-vindo ao Quiz de Matemática Interativo!</h1>",
    layout=widgets.Layout(margin='10px 0')
)

acertos_ui = 0
current_question_index_ui = 0
tentativas_pergunta_atual_ui = 0

perguntas_ui = [
    {"pergunta": "Qual a soma de 10 + 12?", "resposta_correta": 22},
    {"pergunta": "Qual a soma de 22 + 30?", "resposta_correta": 52},
    {"pergunta": "Qual a diferença de 70 - 32?", "resposta_correta": 38},
    {"pergunta": "Qual a diferença de 100 - 32?", "resposta_correta": 68},
    {"pergunta": "Qual é a multiplicação de 7 x 5?", "resposta_correta": 35},
    {"pergunta": "Qual é a multiplicação de 8 x 4?", "resposta_correta": 32},
    {"pergunta": "Qual é a multiplicação de 5 x 7?", "resposta_correta": 35},
    {"pergunta": "Qual é a divisão de 60 / 2?", "resposta_correta": 30},
    {"pergunta": "Qual é a divisão de 70 / 5?", "resposta_correta": 14},
    {"pergunta": "Qual é a divisão de 80 / 4?", "resposta_correta": 20},
]

# --- Widgets da interface ---

output_area_ui = widgets.Output()

question_label_ui = widgets.HTML(
    value="",
    layout=widgets.Layout(margin='10px 0')
)

answer_input_ui = widgets.IntText(
    description='Sua Resposta:',
    layout=widgets.Layout(
        width='auto',
        margin='5px 0',
        border='2px solid #2196F3',
        border_radius='4px'
    )
)

submit_button_ui = widgets.Button(
    description='Responder',
    button_style='success',
    layout=widgets.Layout(margin='5px 0')
)

feedback_label_ui = widgets.HTML(
    value="",
    layout=widgets.Layout(margin='10px 0')
)

quiz_container_layout = widgets.Layout(
    border='5px solid #ADD8E6',
    padding='20px',
    border_radius='8px'
)

# --- Funções ---

def display_question_ui():
    global acertos_ui, current_question_index_ui, tentativas_pergunta_atual_ui

    with output_area_ui:
        clear_output(wait=True)

        if current_question_index_ui < len(perguntas_ui):
            question_text = perguntas_ui[current_question_index_ui]["pergunta"]

            question_label_ui.value = (
                f"<h3 style='color: white; background-color: #337ab7; "
                f"padding: 10px; border-radius: 5px;'>{question_text}</h3>"
            )

            feedback_label_ui.value = ""
            answer_input_ui.value = 0
            answer_input_ui.disabled = False
            submit_button_ui.disabled = False
            tentativas_pergunta_atual_ui = 0

            display(
                widgets.VBox(
                    [question_label_ui, answer_input_ui, submit_button_ui, feedback_label_ui],
                    layout=quiz_container_layout
                )
            )
        else:
            final_score_message = (
                f"Obrigado por responder as perguntas! "
                f"Você acertou {acertos_ui} de {len(perguntas_ui)} perguntas!"
            )

            question_label_ui.value = f"<h2 style='color: green;'>{final_score_message}</h2>"
            answer_input_ui.disabled = True
            submit_button_ui.disabled = True

            display(
                widgets.VBox(
                    [question_label_ui],
                    layout=quiz_container_layout
                )
            )

def on_submit_button_clicked_ui(b):
    global acertos_ui, current_question_index_ui, tentativas_pergunta_atual_ui

    tentativas_pergunta_atual_ui += 1

    resposta_usuario_ui = answer_input_ui.value
    resposta_correta_ui = perguntas_ui[current_question_index_ui]["resposta_correta"]

    if resposta_usuario_ui == resposta_correta_ui:
        feedback_label_ui.value = "<span style='color: green;'><b>Você acertou!</b></span>"
        acertos_ui += 1
        current_question_index_ui += 1
        display_question_ui()
    else:
        feedback_label_ui.value = (
            f"<span style='color: red;'><b>"
            f"Você errou! Tentativa {tentativas_pergunta_atual_ui}. "
            f"Tente novamente.</b></span>"
        )

# --- Iniciar o Quiz ---
display(welcome_message_ui)
submit_button_ui.on_click(on_submit_button_clicked_ui)
display(output_area_ui)
display_question_ui()
